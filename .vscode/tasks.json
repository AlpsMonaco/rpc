{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cpp 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-I",
                "${workspaceFolder}",
                "-I",
                "${workspaceFolder}/3rdparty/asio/asio/include",
                "-g",
                "${workspaceFolder}/test/main.cpp",
                "-o",
                "${workspaceFolder}/test/main",
                "-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}